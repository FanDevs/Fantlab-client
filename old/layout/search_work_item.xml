<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	>

	<LinearLayout
		android:id="@+id/work"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?android:attr/selectableItemBackground"
		android:orientation="horizontal"
		android:paddingBottom="@dimen/spacing_small"
		android:paddingLeft="@dimen/spacing_medium"
		android:paddingRight="@dimen/spacing_medium"
		android:paddingTop="@dimen/spacing_small"
		>

		<ImageView
			android:id="@+id/cover"
			android:layout_width="@dimen/recycler_item_image_size"
			android:layout_height="@dimen/recycler_item_image_size"
			android:layout_gravity="top"
			tools:ignore="ContentDescription"
			tools:src="@color/blue"
			/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingLeft="@dimen/spacing_medium"
			tools:ignore="RtlHardcoded,RtlSymmetry"
			>

			<TextView
				android:id="@+id/author"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:maxLines="1"
				android:textColor="@color/black"
				android:textSize="@dimen/text_medium"
				app:font="@{@string/roboto_regular}"
				tools:text="Эдмонд Гамильтон"
				/>

			<TextView
				android:id="@+id/name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:maxLines="1"
				android:textColor="@color/black"
				android:textSize="@dimen/text_medium"
				app:font="@{@string/roboto_regular}"
				tools:text="Звёздные короли / Star Kings"
				/>

			<TextView
				android:id="@+id/alt_names"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:maxLines="2"
				android:textSize="@dimen/text_medial"
				app:font="@{@string/roboto_regular}"
				tools:ignore="RtlHardcoded"
				tools:text="Битва Империи; Последняя битва; Beyond the Moon"
				/>

			<TextView
				android:id="@+id/info"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:maxLines="1"
				android:textColor="@color/black"
				android:textSize="@dimen/text_medial"
				app:font="@{@string/roboto_regular}"
				tools:ignore="RtlHardcoded"
				tools:text="1947, роман"
				/>

		</LinearLayout>

	</LinearLayout>

</layout>