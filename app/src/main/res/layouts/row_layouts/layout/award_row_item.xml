<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="100dp"
	android:layout_height="wrap_content"
	android:background="?android:selectableItemBackground"
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:paddingBottom="@dimen/spacing_normal"
	android:paddingTop="@dimen/spacing_normal"
	>

	<ru.fantlab.android.ui.widgets.AvatarLayout
		android:id="@+id/awardIcon"
		android:layout_width="70dp"
		android:layout_height="70dp"
		/>

	<ru.fantlab.android.ui.widgets.FontTextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:includeFontPadding="false"
		android:paddingEnd="@dimen/spacing_micro"
		android:paddingStart="@dimen/spacing_micro"
		android:paddingTop="@dimen/spacing_micro"
		android:textColor="?android:attr/textColorSecondary"
		tools:text="British Fantasy Award"
		style="@style/TextAppearance.AppCompat.Subhead"
		/>

</LinearLayout>