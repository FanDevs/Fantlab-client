<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_vertical"
	android:orientation="vertical"
	android:layout_marginBottom="@dimen/spacing_normal"
	android:layout_marginTop="@dimen/spacing_normal"
	android:layout_marginStart="@dimen/spacing_micro"
	android:layout_marginEnd="@dimen/spacing_micro"
	>

	<LinearLayout
		android:id="@+id/topView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>

		<ru.fantlab.android.ui.widgets.ForegroundImageView
			android:id="@+id/iv_arrow"
			android:layout_width="18dp"
			android:layout_height="18dp"
			android:layout_gravity="center_vertical"
			android:src="@drawable/ic_arrow_right"
			app:tint="?android:attr/textColorSecondary"
			/>

		<ru.fantlab.android.ui.widgets.FontTextView
			android:id="@+id/name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="5dp"
			android:drawablePadding="10dp"
			android:drawableStart="@drawable/ic_books"
			android:gravity="center_vertical"
			android:textColor="?android:textColorTertiary"
			app:drawableColor="?android:attr/textColorSecondary"
			tools:text="Восьмая нога бога"
			style="@style/TextAppearance.AppCompat.Medium"
			/>
	</LinearLayout>

	<ru.fantlab.android.ui.widgets.ExpandableTextView
		android:id="@+id/description"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="25dp"
		android:gravity="center_vertical"
		android:paddingBottom="2dp"
		android:paddingTop="2dp"
		android:textColor="?android:attr/textColorSecondary"
		android:visibility="gone"
		app:trimLength="100"
		style="@style/TextAppearance.AppCompat.Subhead"
		/>
</LinearLayout>