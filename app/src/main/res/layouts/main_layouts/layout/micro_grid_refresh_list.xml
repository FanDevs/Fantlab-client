<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	app:layout_behavior="@string/scroll_behavior"
	tools:ignore="MergeRootFrame"
	>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>

		<ru.fantlab.android.ui.widgets.AppbarRefreshLayout
			android:id="@+id/refresh"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			>

			<ru.fantlab.android.ui.widgets.SortView
				android:id="@+id/sortview"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:menu_height="100"
				>

				<ru.fantlab.android.ui.widgets.recyclerview.DynamicRecyclerView
					android:id="@+id/recycler"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					app:layoutManager="@string/staggered_layout_manager"
					app:spanCount="@integer/micro_spans"
					/>
			</ru.fantlab.android.ui.widgets.SortView>

		</ru.fantlab.android.ui.widgets.AppbarRefreshLayout>

		<ru.fantlab.android.ui.widgets.recyclerview.scroll.RecyclerViewFastScroller
			android:id="@+id/fastScroller"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignBottom="@+id/refresh"
			android:layout_alignParentEnd="true"
			android:layout_alignTop="@+id/refresh"
			android:layout_centerHorizontal="true"
			/>

	</RelativeLayout>

	<include layout="@layout/state_layout" />

</FrameLayout>