<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="org.odddev.fantlab.auth.reg.RegValidator.FIELD"/>

        <variable
            name="handler"
            type="org.odddev.fantlab.auth.reg.IRegActions"/>

        <variable
            name="regValidator"
            type="org.odddev.fantlab.auth.reg.RegValidator"/>

    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/register.caption"
                android:textColor="@color/color_primary_dark"
                android:textSize="20sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:error="@{regValidator.fieldErrors[FIELD.USERNAME]}">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/register.username.input"
                    android:inputType="text"
                    android:text="@={regValidator.fields[FIELD.USERNAME]}"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:error="@{regValidator.fieldErrors[FIELD.PASSWORD]}">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/register.password.input"
                    android:inputType="textPassword"
                    android:text="@={regValidator.fields[FIELD.PASSWORD]}"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:error="@{regValidator.fieldErrors[FIELD.EMAIL]}">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/register.email.input"
                    android:inputType="textEmailAddress"
                    android:text="@={regValidator.fields[FIELD.EMAIL]}"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:errorEnabled="false">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/register.name.input"
                    android:inputType="textCapSentences"/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/register.gender.caption"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <RadioGroup
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/male"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/male"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/register.gender.male"
                        android:textSize="16sp"/>

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/register.gender.female"
                        android:textSize="16sp"/>

                </RadioGroup>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:errorEnabled="false">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/register.birthday.input"
                    android:inputType="datetime"
                    android:maxLines="1"
                    android:text="@={regValidator.fields[FIELD.BIRTH_DATE]}"
                    app:onClick="@{handler::pickDate}"/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/register.location.caption"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <RadioGroup
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@+id/location_id"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/location_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/register.location.id"
                        android:textSize="16sp"/>

                    <RadioButton
                        android:id="@+id/location_string"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/register.location.string"
                        android:textSize="16sp"/>

                </RadioGroup>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:error="@{regValidator.fieldErrors[FIELD.WEB_PAGE]}">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/web_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/register.web_page.input"
                    android:inputType="textUri"
                    android:text="@={regValidator.fields[FIELD.WEB_PAGE]}"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:error="@{regValidator.fieldErrors[FIELD.SKYPE]}">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/skype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/register.skype.input"
                    android:text="@={regValidator.fields[FIELD.SKYPE]}"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:error="@{regValidator.fieldErrors[FIELD.ICQ]}">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/icq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/register.icq.input"
                    android:inputType="number"
                    android:text="@={regValidator.fields[FIELD.ICQ]}"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>