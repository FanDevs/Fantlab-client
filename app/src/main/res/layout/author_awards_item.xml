<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	>

	<data>

		<import type="org.odddev.fantlab.BuildConfig" />

		<import type="android.text.TextUtils" />

		<variable
			name="award"
			type="org.odddev.fantlab.autors.autor.AutorFull.Award"
			/>

	</data>

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/cardview_margin"
		android:layout_marginLeft="@dimen/spacing_small"
		android:layout_marginRight="@dimen/spacing_small"
		android:layout_marginTop="@dimen/cardview_margin"
		>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="?attr/selectableItemBackground"
			android:clickable="true"
			android:focusable="true"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:paddingBottom="@dimen/spacing_small"
			android:paddingLeft="@dimen/spacing_medium"
			android:paddingRight="@dimen/spacing_medium"
			android:paddingTop="@dimen/spacing_small"
			>

			<ImageView
				android:layout_width="@dimen/recycler_item_image_size"
				android:layout_height="@dimen/recycler_item_image_size"
				app:srcUri="@{BuildConfig.IMAGES_URL + @string/award_image_url(award.id)}"
				tools:ignore="ContentDescription"
				/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/spacing_small"
				android:orientation="vertical"
				tools:ignore="RtlHardcoded"
				>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:ellipsize="end"
					android:maxLines="2"
					android:text="@{(!TextUtils.isEmpty(award.rusName) ? award.rusName : award.name) + `, ` + award.contestYear}"
					android:textColor="@color/black"
					android:textSize="@dimen/text_medial"
					/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:ellipsize="end"
					android:maxLines="1"
					android:text="@{!TextUtils.isEmpty(award.workRusname) ? award.workRusname : award.workName}"
					android:textColor="@color/blue"
					android:textSize="@dimen/text_medial"
					android:visibility="@{award.workId != 0}"
					/>

			</LinearLayout>

		</LinearLayout>

	</android.support.v7.widget.CardView>

</layout>